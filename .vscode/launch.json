    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug MCP Server (stdio)",
            "type": "debugpy",
            "request": "launch",
            "module": "mcp_template.main",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "env": {
              "PYTHONPATH": "${workspaceFolder}/src",
              "PYTHONUNBUFFERED": "1"
            },
            "args": ["--transport", "stdio"],
            "justMyCode": false,
            "stopOnEntry": false,
            "showReturnValue": true
          },
        {
            "name": "Debug MCP Server (HTTP)",
            "type": "debugpy",
            "request": "launch",
            "module": "mcp_template.main",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "env": {
              "PYTHONPATH": "${workspaceFolder}/src",
              "PYTHONUNBUFFERED": "1"
            },
            "args": ["--transport", "http", "--host", "localhost", "--port", "8000"],
            "justMyCode": false,
            "stopOnEntry": false,
            "showReturnValue": true
          },
        {
            "name": "Debug MCP Server (HTTP + Auto-reload)",
            "type": "debugpy",
            "request": "launch",
            "module": "mcp_template.main",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "env": {
              "PYTHONPATH": "${workspaceFolder}/src",
              "PYTHONUNBUFFERED": "1"
            },
            "args": ["--transport", "http", "--host", "localhost", "--port", "8000", "--reload"],
            "justMyCode": false,
            "stopOnEntry": false,
            "showReturnValue": true
          }
    ]
}